<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <?php if( $this->isEnabledViewSwitcher() ): ?>
    <div class="view-mode">
        <ul>
        <?php $_modes = $this->getModes(); ?>
        <?php if($_modes && count($_modes)>1): ?>            
        <li><?php echo $this->__('View') ?>: </li>
        <?php foreach ($this->getModes() as $_code=>$_label): ?>
            <?php if($this->isModeActive($_code)): ?>
                <li class="<?php echo strtolower($_code); ?> active"><img src="<?php echo $this->getSkinUrl('images/')?><?php echo strtolower($_code); ?>-hover.png" alt="<?php echo $_label ?>" title="<?php echo $_label ?>" width="34" height="31" /></li>
            <?php else: ?>
                <li class="<?php echo strtolower($_code); ?>"><a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $_label ?>"><img src="<?php echo $this->getSkinUrl('images/')?><?php echo strtolower($_code); ?>.png" alt="<?php echo $_label ?>" title="<?php echo $_label ?>" width="34" height="31" /></a></li>
            <?php endif; ?>
        <?php endforeach; ?>
        <?php endif; ?>
        </ul>
    </div>
    <?php endif; ?>
</div>
<?php endif ?>
