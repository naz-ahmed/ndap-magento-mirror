<?xml version="1.0"?>
<config>
    <sections>
        <tax translate="label" module="advanced">
            <groups>
                <advanced>
                    <label>Accuratetax.com (Advanced)</label>
                    <comment><![CDATA[<p>Please set "Tax Class for Shipping" under System->Configuration->Sales->Tax->Tax Classes</em></p>]]></comment>
                    <sort_order>-1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <title_settings translate="label">
                            <label><![CDATA[<strong>Account Settings</strong>]]></label>
                            <frontend_type>label</frontend_type>
                            <sort_order>0</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
                        </title_settings>
                        <license translate="label">
                            <label>License Key</label>
                            <frontend_type>text</frontend_type>
                            <comment>Provided with Accuratetax.com Account</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </license>
                        <checksum translate="label">
                            <label>Checksum</label>
                            <frontend_type>text</frontend_type>
                            <comment>Provided with Accuratetax.com Account</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </checksum>
                        <url translate="label">
                            <label>Service URL</label>
                            <frontend_type>text</frontend_type>
                            <comment>URL to Accuratetax.com XML Service</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url>
                        <agree translate="label">
                            <label><![CDATA[I agree to the <a target="_blank" href="http://www.accuratetax.com/module_license.php">module license</a>]]></label>
                            <comment>You must agree to the module license in order to use the AccurateTax Service</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
                        </agree>
                        <title_module_settings translate="label">
                            <label><![CDATA[<strong>Module Settings</strong>]]></label>
                            <frontend_type>label</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_module_settings>
                        <allowinvalid translate="label">
                            <label>Allow Invalid Addresses</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>If set to NO addresses that return 0 or more than 1 address will not allow the user to continue during the checkout process</comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allowinvalid>
                        <onlyscrubtaxable translate="label">
                            <label>Only Validate Addresses for Taxable States</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>If set to YES addresses will only be validated if they exist in a state that is setup to charge tax</comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </onlyscrubtaxable>
                        <title_module_settings translate="label">
                            <label><![CDATA[<strong>Debug</strong>]]></label>
                            <frontend_type>label</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_module_settings>
                        <clientinfo translate="label">
							<label>Send Client Information</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</clientinfo>
                        <debug translate="label">
							<label>Enable Debug</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</debug>
						<title_disable translate="label">
                            <label><![CDATA[<strong>Disable Module</strong>]]></label>
                            <frontend_type>label</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_disable>
                        <disable translate="label">
							<label>Disable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</disable>
                    </fields>
                </advanced>
            </groups>
        </tax>
    </sections>
</config>
